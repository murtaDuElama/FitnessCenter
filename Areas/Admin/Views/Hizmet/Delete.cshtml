@model Hizmet

@{
    ViewData["Title"] = "Hizmet Sil";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0"><i class="fas fa-trash me-2"></i>Hizmet Sil</h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning" role="alert">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        <strong>Dikkat!</strong> Bu hizmeti silmek istediğinize emin misiniz? Bu işlem geri alınamaz.
                    </div>

                    <div class="card mb-3">
                        <div class="card-body">
                            <dl class="row mb-0">
                                <dt class="col-sm-4"><i class="fas fa-hashtag me-2"></i>ID:</dt>
                                <dd class="col-sm-8"><strong>@Model.Id</strong></dd>

                                <dt class="col-sm-4"><i class="fas fa-tag me-2"></i>Hizmet Adı:</dt>
                                <dd class="col-sm-8">@Model.Ad</dd>

                                <dt class="col-sm-4"><i class="fas fa-clock me-2"></i>Süre:</dt>
                                <dd class="col-sm-8"><span class="badge bg-info">@Model.Sure dakika</span></dd>

                                <dt class="col-sm-4"><i class="fas fa-lira-sign me-2"></i>Ücret:</dt>
                                <dd class="col-sm-8"><span class="badge bg-success">@Model.Ucret ₺</span></dd>
                            </dl>
                        </div>
                    </div>

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-2"></i>Geri Dön
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash me-2"></i>Evet, Sil
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>