@model List<Randevu>

@{
    ViewData["Title"] = "Randevu Yönetimi";
}

<div class="container-fluid">
    <h2 class="mb-4">Randevu Yönetimi</h2>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["DeleteMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["DeleteMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card shadow">
        <div class="card-header bg-dark text-white">
            <h5 class="mb-0">Tüm Randevular</h5>
        </div>
        <div class="card-body">
            <table class="table table-bordered table-striped table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Tarih / Saat</th>
                        <th>Müşteri</th>
                        <th>Telefon</th>
                        <th>Hizmet</th>
                        <th>Antrenör</th>
                        <th class="text-center">Durum</th>
                        <th class="text-center">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Count == 0)
                    {
                        <tr>
                            <td colspan="7" class="text-center text-muted p-4">
                                Kayıtlı randevu bulunmamaktadır.
                            </td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var r in Model)
                        {
                            <tr>
                                <td>
                                    <strong>@r.Tarih.ToShortDateString()</strong>
                                    <br />
                                    <span class="text-muted">@r.Saat</span>
                                </td>
                                <td>@r.AdSoyad</td>
                                <td>@r.Hizmet?.Ad</td>
                                <td>@r.Antrenor?.AdSoyad</td>
                                <td class="text-center">
                                    @if (r.Onaylandi)
                                    {
                                        <span class="badge bg-success rounded-pill px-3">Onaylandı</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning text-dark rounded-pill px-3">Bekliyor</span>
                                    }
                                </td>
                                <td class="text-center">
                                    <div class="d-flex justify-content-center gap-2">
                                        @if (!r.Onaylandi)
                                        {
                                            <form asp-action="Onayla" asp-controller="Randevu" asp-area="Admin" method="post">
                                                <input type="hidden" name="id" value="@r.Id" />
                                                <button type="submit" class="btn btn-sm btn-success" title="Onayla">
                                                    Onayla
                                                </button>
                                            </form>
                                        }

                                        <form asp-action="Sil" asp-controller="Randevu" asp-area="Admin" method="post" onsubmit="return confirm('Bu randevuyu silmek istediğinize emin misiniz?');">
                                            <input type="hidden" name="id" value="@r.Id" />
                                            <button type="submit" class="btn btn-sm btn-danger" title="Sil">
                                                Sil
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>