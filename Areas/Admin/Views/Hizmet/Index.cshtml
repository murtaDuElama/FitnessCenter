@model List<Hizmet>

@{
    ViewData["Title"] = "Hizmet Yönetimi";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-list-alt me-2"></i>Hizmet Yönetimi</h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i>Yeni Hizmet Ekle
        </a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Delete"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-trash me-2"></i>@TempData["Delete"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="table-dark">
                        <tr>
                            <th><i class="fas fa-hashtag me-2"></i>ID</th>
                            <th><i class="fas fa-tag me-2"></i>Hizmet Adı</th>
                            <th><i class="fas fa-clock me-2"></i>Süre</th>
                            <th><i class="fas fa-lira-sign me-2"></i>Ücret</th>
                            <th class="text-center">Düzenle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td><strong>@item.Id</strong></td>
                                    <td>
                                        <i class="fas fa-dumbbell text-primary me-2"></i>
                                        <strong>@item.Ad</strong>
                                    </td>
                                    <td>
                                        <span class="badge bg-info">@item.Sure dk</span>
                                    </td>
                                    <td>
                                        <span class="badge bg-success">@item.Ucret ₺</span>
                                    </td>
                                    <td class="text-center">
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning" title="Düzenle">
                                            <i class="fas fa-edit me-1"></i>Düzenle
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="5" class="text-center text-muted py-4">
                                    <i class="fas fa-inbox fa-3x mb-3 d-block"></i>
                                    Henüz hizmet eklenmemiş.
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<style>
    .table th {
        white-space: nowrap;
    }
</style>
