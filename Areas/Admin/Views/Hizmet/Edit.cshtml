@model Hizmet

@{
    ViewData["Title"] = "Hizmet Düzenle";
}

<h2 class="mb-4">Hizmet Düzenle</h2>
<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="Id" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="Ad" class="form-label">Hizmet Adı</label>
                <input asp-for="Ad" class="form-control" required />
                <span asp-validation-for="Ad" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Sure" class="form-label">Süre (Dakika)</label>
                <input asp-for="Sure" class="form-control" type="number" required />
                <span asp-validation-for="Sure" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Ucret" class="form-label">Ücret (₺)</label>
                <input asp-for="Ucret" class="form-control" type="number" step="0.01" required />
                <span asp-validation-for="Ucret" class="text-danger"></span>
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary">Güncelle</button>
                <a href="/Admin/Hizmet/Index" class="btn btn-secondary">İptal</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}