@model List<Antrenor>

<h2>Antrenör Listesi</h2>
<hr />
<a href="/Admin/Antrenor/Create" class="btn btn-primary mb-3">Yeni Antrenör Ekle</a>

<table class="table table-bordered table-hover">
    <thead class="table-light">
        <tr>
            <th>ID</th>
            <th>Ad Soyad</th>
            <th>Uzmanlık</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.AdSoyad</td>
                <td>@item.Uzmanlik</td>
                <td>
                    <a href="/Admin/Antrenor/Edit/@item.Id" class="btn btn-warning btn-sm">Düzenle</a>
                    <a href="/Admin/Antrenor/Delete/@item.Id" class="btn btn-danger btn-sm">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>