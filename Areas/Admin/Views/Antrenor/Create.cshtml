@model Antrenor

@{
    ViewData["Title"] = "Yeni Antrenör Ekle";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0"><i class="fas fa-user-plus me-2"></i>Yeni Antrenör Ekle</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="mb-3">
                            <label asp-for="AdSoyad" class="form-label">
                                <i class="fas fa-user me-2"></i>Ad Soyad
                            </label>
                            <input asp-for="AdSoyad" class="form-control" placeholder="Örn: Ahmet Yılmaz" required />
                            <span asp-validation-for="AdSoyad" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Uzmanlik" class="form-label fw-bold">
                                Uzmanlık Alanı
                            </label>

                            <select asp-for="Uzmanlik"
                                    class="form-select">
                                <option value="">-- Hizmet Seçiniz --</option>

                                @if (ViewBag.Hizmetler != null)
                                {
                                    @foreach (var h in (List<string>)ViewBag.Hizmetler)
                                    {
                                        <option value="@h">@h</option>
                                    }
                                }
                            </select>

                            <span asp-validation-for="Uzmanlik" class="text-danger"></span>

                            <small class="text-muted">
                                Antrenör yalnızca sistemde tanımlı bir hizmette uzman olabilir.
                            </small>
                        </div>


                        <div class="mb-3">
                            <label asp-for="FotografUrl" class="form-label">
                                <i class="fas fa-image me-2"></i>Fotoğraf URL
                            </label>
                            <input asp-for="FotografUrl" class="form-control" placeholder="https://example.com/foto.jpg" />
                            <span asp-validation-for="FotografUrl" class="text-danger"></span>
                            <small class="form-text text-muted">Opsiyonel - Boş bırakabilirsiniz</small>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="CalismaBaslangicSaati" class="form-label">
                                    <i class="fas fa-clock me-2"></i>Çalışma Başlangıç Saati
                                </label>
                                <input asp-for="CalismaBaslangicSaati" type="time" class="form-control" required />
                                <span asp-validation-for="CalismaBaslangicSaati" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="CalismaBitisSaati" class="form-label">
                                    <i class="fas fa-clock me-2"></i>Çalışma Bitiş Saati
                                </label>
                                <input asp-for="CalismaBitisSaati" type="time" class="form-control" required />
                                <span asp-validation-for="CalismaBitisSaati" class="text-danger"></span>
                            </div>
                        </div>


                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-2"></i>Geri Dön
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-save me-2"></i>Kaydet
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}