@model Antrenor

<h2>Antrenör Düzenle</h2>
<hr />

<form asp-action="Edit" method="post" class="w-50">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label class="form-label">Ad Soyad</label>
        <input asp-for="AdSoyad" class="form-control" required />
    </div>
    <div class="mb-3">
        <label class="form-label">Uzmanlık Alanı</label>
        <input asp-for="Uzmanlik" class="form-control" required />
    </div>
    <div class="mb-3">
        <label class="form-label">Fotoğraf URL</label>
        <input asp-for="FotografUrl" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Güncelle</button>
    <a href="/Admin/Antrenor/Index" class="btn btn-secondary">İptal</a>
</form>