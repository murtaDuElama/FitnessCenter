@model Antrenor

@{
    ViewData["Title"] = "Antrenör Düzenle";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-warning text-dark">
                    <h4 class="mb-0"><i class="fas fa-edit me-2"></i>Antrenör Düzenle</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="mb-3">
                            <label asp-for="AdSoyad" class="form-label">
                                <i class="fas fa-user me-2"></i>Ad Soyad
                            </label>
                            <input asp-for="AdSoyad" class="form-control" required />
                            <span asp-validation-for="AdSoyad" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Uzmanlik" class="form-label">
                                <i class="fas fa-dumbbell me-2"></i>Uzmanlık Alanı
                            </label>
                            <input asp-for="Uzmanlik" class="form-control" required />
                            <span asp-validation-for="Uzmanlik" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="FotografUrl" class="form-label">
                                <i class="fas fa-image me-2"></i>Fotoğraf URL
                            </label>
                            <input asp-for="FotografUrl" class="form-control" />
                            <span asp-validation-for="FotografUrl" class="text-danger"></span>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="CalismaBaslangicSaati" class="form-label">
                                    <i class="fas fa-clock me-2"></i>Başlangıç Saati
                                </label>
                                <input asp-for="CalismaBaslangicSaati" type="time" class="form-control" required />
                                <span asp-validation-for="CalismaBaslangicSaati" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="CalismaBitisSaati" class="form-label">
                                    <i class="fas fa-clock me-2"></i>Bitiş Saati
                                </label>
                                <input asp-for="CalismaBitisSaati" type="time" class="form-control" required />
                                <span asp-validation-for="CalismaBitisSaati" class="text-danger"></span>
                            </div>
                        </div>


                        @if (!string.IsNullOrEmpty(Model.FotografUrl))
                        {
                            <div class="mb-3">
                                <label class="form-label">Mevcut Fotoğraf</label>
                                <div>
                                    <img src="@Model.FotografUrl" alt="@Model.AdSoyad" class="img-thumbnail" style="max-width: 200px;" />
                                </div>
                            </div>
                        }

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-2"></i>Geri Dön
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-save me-2"></i>Güncelle
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}