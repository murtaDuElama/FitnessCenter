@{
    ViewData["Title"] = "Admin Ana Sayfa";
}

<div class="container-fluid">
    <!-- Hoşgeldiniz Kartı -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card bg-gradient shadow-sm" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                <div class="card-body text-white p-4">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h2 class="mb-2"><i class="fas fa-user-shield me-2"></i>Hoş Geldiniz!</h2>
                            <p class="mb-0 fs-5">FitnessCenter Yönetim Paneline hoş geldiniz.</p>
                        </div>
                        <div class="d-none d-md-block">
                            <i class="fas fa-dumbbell fa-5x opacity-25"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- İstatistik Kartları -->
    <div class="row mb-4">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                Toplam Hizmet
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.ToplamHizmet</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-list-alt fa-2x text-primary"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                Toplam Antrenör
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.ToplamAntrenor</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-user-tie fa-2x text-success"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                Toplam Randevu
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.ToplamRandevu</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-calendar-check fa-2x text-info"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                Bekleyen Randevu
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.BekleyenRandevu</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-clock fa-2x text-warning"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Son Randevular -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="fas fa-calendar-alt me-2"></i>Son Randevular</h5>
                    <a asp-area="Admin" asp-controller="Randevu" asp-action="Index" class="btn btn-light btn-sm">
                        Tümünü Gör <i class="fas fa-arrow-right ms-1"></i>
                    </a>
                </div>
                <div class="card-body">
                    @if (ViewBag.SonRandevular != null && ((List<Randevu>)ViewBag.SonRandevular).Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover align-middle">
                                <thead>
                                    <tr>
                                        <th><i class="fas fa-user me-2"></i>Üye</th>
                                        <th><i class="fas fa-user-tie me-2"></i>Antrenör</th>
                                        <th><i class="fas fa-dumbbell me-2"></i>Hizmet</th>
                                        <th><i class="fas fa-calendar me-2"></i>Tarih</th>
                                        <th><i class="fas fa-clock me-2"></i>Saat</th>
                                        <th class="text-center"><i class="fas fa-check-circle me-2"></i>Durum</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var randevu in (List<Randevu>)ViewBag.SonRandevular)
                                    {
                                        <tr>
                                            <td>
                                                @if (randevu.User != null)
                                                {
                                                    <span><i class="fas fa-user-circle text-primary me-2"></i>@randevu.User.UserName</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">-</span>
                                                }
                                            </td>
                                            <td>
                                                @if (randevu.Antrenor != null)
                                                {
                                                    <span>@randevu.Antrenor.AdSoyad</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">-</span>
                                                }
                                            </td>
                                            <td>
                                                @if (randevu.Hizmet != null)
                                                {
                                                    <span class="badge bg-primary">@randevu.Hizmet.Ad</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">-</span>
                                                }
                                            </td>
                                            <td>@randevu.Tarih.ToString("dd.MM.yyyy")</td>
                                            <td>@randevu.Saat</td>
                                            <td class="text-center">
                                                @if (randevu.Onaylandi)
                                                {
                                                    <span class="badge bg-success">
                                                        <i class="fas fa-check me-1"></i>Onaylandı
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-warning text-dark">
                                                        <i class="fas fa-clock me-1"></i>Bekliyor
                                                    </span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center text-muted py-4">
                            <i class="fas fa-inbox fa-3x mb-3 d-block"></i>
                            Henüz randevu bulunmuyor.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Hızlı Erişim -->
    <div class="row mt-4">
        <div class="col-md-4 mb-3">
            <a asp-area="Admin" asp-controller="Randevu" asp-action="Index" class="text-decoration-none">
                <div class="card bg-info text-white shadow h-100">
                    <div class="card-body text-center p-4">
                        <i class="fas fa-calendar-check fa-3x mb-3"></i>
                        <h5>Randevu Yönetimi</h5>
                        <p class="mb-0">Randevuları görüntüle ve yönet</p>
                    </div>
                </div>
            </a>
        </div>

        <div class="col-md-4 mb-3">
            <a asp-area="Admin" asp-controller="Hizmet" asp-action="Index" class="text-decoration-none">
                <div class="card bg-success text-white shadow h-100">
                    <div class="card-body text-center p-4">
                        <i class="fas fa-list-alt fa-3x mb-3"></i>
                        <h5>Hizmet Yönetimi</h5>
                        <p class="mb-0">Hizmetleri düzenle ve ekle</p>
                    </div>
                </div>
            </a>
        </div>

        <div class="col-md-4 mb-3">
            <a asp-area="Admin" asp-controller="Antrenor" asp-action="Index" class="text-decoration-none">
                <div class="card bg-warning text-dark shadow h-100">
                    <div class="card-body text-center p-4">
                        <i class="fas fa-user-tie fa-3x mb-3"></i>
                        <h5>Antrenör Yönetimi</h5>
                        <p class="mb-0">Antrenörleri yönet</p>
                    </div>
                </div>
            </a>
        </div>
    </div>
</div>

<style>
    .border-left-primary {
        border-left: 4px solid #0d6efd !important;
    }

    .border-left-success {
        border-left: 4px solid #198754 !important;
    }

    .border-left-info {
        border-left: 4px solid #0dcaf0 !important;
    }

    .border-left-warning {
        border-left: 4px solid #ffc107 !important;
    }

    .card {
        transition: transform 0.2s ease;
    }

        .card:hover {
            transform: translateY(-5px);
        }
</style>