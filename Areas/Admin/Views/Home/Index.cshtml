@{
    ViewData["Title"] = "Admin Paneli";
}

<div class="mb-4 p-4 rounded bg-dark text-white">
    <h2>Hoş Geldiniz!</h2>
    <p>FitnessCenter Yönetim Paneline hoş geldiniz.</p>
</div>

<div class="row g-4">
    <!-- RANDEVU -->
    <div class="col-md-4">
        <div class="card bg-info text-white h-100">
            <div class="card-body">
                <h5 class="card-title">Randevu Yönetimi</h5>
                <p class="card-text">Randevuları görüntüle ve yönet</p>

                <a href="/Admin/Randevu/Index" class="btn btn-light btn-sm">
                    <i class="fas fa-calendar-check me-2"></i>Randevulara Git
                </a>

            </div>
        </div>
    </div>

    <!-- HİZMET -->
    <div class="col-md-4">
        <div class="card bg-success text-white h-100">
            <div class="card-body">
                <h5 class="card-title">Hizmet Yönetimi</h5>
                <p class="card-text">Hizmetleri ekle ve düzenle</p>

                <a href="/Admin/Hizmet/Index" class="btn btn-light btn-sm">
                    <i class="fas fa-list-alt me-2"></i>Hizmetlere Git
                </a>

            </div>
        </div>
    </div>

    <!-- ANTRENÖR -->
    <div class="col-md-4">
        <div class="card bg-warning text-dark h-100">
            <div class="card-body">
                <h5 class="card-title">Antrenör Yönetimi</h5>
                <p class="card-text">Antrenörleri ekle ve düzenle</p>

                <a href="/Admin/Antrenor/Index" class="btn btn-dark btn-sm">
                    <i class="fas fa-user-tie me-2"></i>Antrenörlere Git
                </a>
            </div>
        </div>
    </div>

    <!-- API RAPORLARI -->
    <div class="col-md-4">
        <div class="card bg-primary text-white h-100">
            <div class="card-body">
                <h5 class="card-title">API Raporları</h5>
                <p class="card-text">İstatistikler ve görsel raporlar</p>

                <a href="/Admin/Raporlar/Index" class="btn btn-light btn-sm">
                    <i class="fas fa-chart-line me-2"></i>Raporlara Git
                </a>
            </div>
        </div>
    </div>

</div>
