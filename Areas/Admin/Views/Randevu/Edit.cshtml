@model Randevu

@{
    ViewData["Title"] = "Randevu Detayı";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card shadow-sm">
                <div class="card-header bg-secondary text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-calendar-alt me-2"></i>Randevu Detayı
                    </h4>
                </div>

                <div class="card-body">

                    <div class="alert alert-info mb-4">
                        <i class="fas fa-info-circle me-2"></i>
                        Bu sayfa randevu bilgilerini görüntülemek içindir.
                        Gerekirse randevu buradan silinebilir.
                    </div>

                    <!-- ÜYE & ANTRENÖR -->
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <div class="card bg-light">
                                <div class="card-body">
                                    <h6 class="text-muted mb-3">
                                        <i class="fas fa-user me-2"></i>Üye Bilgileri
                                    </h6>
                                    <p class="mb-1">
                                        <strong>Üye:</strong>
                                        @Model.User?.UserName ?? "Bilinmiyor"
                                    </p>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="card bg-light">
                                <div class="card-body">
                                    <h6 class="text-muted mb-3">
                                        <i class="fas fa-user-tie me-2"></i>Antrenör Bilgileri
                                    </h6>
                                    <p class="mb-1">
                                        <strong>Antrenör:</strong>
                                        @Model.Antrenor?.AdSoyad ?? "Bilinmiyor"
                                    </p>
                                    <small class="text-muted">
                                        Uzmanlık: @Model.Antrenor?.Uzmanlik
                                    </small>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- HİZMET / TARİH / SAAT -->
                    <div class="row mb-4">
                        <div class="col-md-4">
                            <div class="card bg-light text-center">
                                <div class="card-body">
                                    <i class="fas fa-dumbbell fa-2x text-primary mb-2"></i>
                                    <h6 class="text-muted">Hizmet</h6>
                                    <p class="mb-0">
                                        <strong>@Model.Hizmet?.Ad</strong>
                                    </p>
                                    <small class="text-muted">
                                        @Model.Hizmet?.Sure dk – @Model.Hizmet?.Ucret ₺
                                    </small>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="card bg-light text-center">
                                <div class="card-body">
                                    <i class="fas fa-calendar-alt fa-2x text-success mb-2"></i>
                                    <h6 class="text-muted">Tarih</h6>
                                    <p class="mb-0">
                                        <strong>@Model.Tarih.ToString("dd.MM.yyyy")</strong>
                                    </p>
                                    <small class="text-muted">
                                        @Model.Tarih.DayOfWeek
                                    </small>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="card bg-light text-center">
                                <div class="card-body">
                                    <i class="fas fa-clock fa-2x text-warning mb-2"></i>
                                    <h6 class="text-muted">Saat</h6>
                                    <p class="mb-0">
                                        <strong>@Model.Saat</strong>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- BUTONLAR -->
                    <div class="d-flex justify-content-between mt-4">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-2"></i>Geri Dön
                        </a>

                        <form asp-action="Sil"
                              asp-route-id="@Model.Id"
                              method="post"
                              onsubmit="return confirm('Bu randevuyu silmek istediğinize emin misiniz?');">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash me-2"></i>Randevuyu Sil
                            </button>
                        </form>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card.bg-light {
        border: 2px solid #e9ecef;
    }
</style>
