@model Randevu

@{
    ViewData["Title"] = "Randevu Düzenle";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card shadow-sm">
                <div class="card-header bg-warning text-dark">
                    <h4 class="mb-0"><i class="fas fa-edit me-2"></i>Randevu Düzenle</h4>
                </div>
                <div class="card-body">
                    <div class="row mb-4">
                        <div class="col-md-12">
                            <div class="alert alert-info" role="alert">
                                <i class="fas fa-info-circle me-2"></i>
                                <strong>Not:</strong> Bu sayfada sadece randevu onay durumunu değiştirebilirsiniz.
                            </div>
                        </div>
                    </div>

                    <div class="row mb-4">
                        <div class="col-md-6">
                            <div class="card bg-light">
                                <div class="card-body">
                                    <h6 class="card-subtitle mb-3 text-muted">
                                        <i class="fas fa-user me-2"></i>Üye Bilgileri
                                    </h6>
                                    <dl class="row mb-0">
                                        <dt class="col-sm-4">Üye:</dt>
                                        <dd class="col-sm-8">
                                            @if (Model.User != null)
                                            {
                                                <span>@Model.User.UserName</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">Bilinmiyor</span>
                                            }
                                        </dd>
                                    </dl>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="card bg-light">
                                <div class="card-body">
                                    <h6 class="card-subtitle mb-3 text-muted">
                                        <i class="fas fa-user-tie me-2"></i>Antrenör Bilgileri
                                    </h6>
                                    <dl class="row mb-0">
                                        <dt class="col-sm-4">Antrenör:</dt>
                                        <dd class="col-sm-8">
                                            @if (Model.Antrenor != null)
                                            {
                                                <span>@Model.Antrenor.AdSoyad</span>
                                                <br />
                                                <small class="text-muted">@Model.Antrenor.Uzmanlik</small>
                                            }
                                            else
                                            {
                                                <span class="text-muted">Bilinmiyor</span>
                                            }
                                        </dd>
                                    </dl>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row mb-4">
                        <div class="col-md-4">
                            <div class="card bg-light">
                                <div class="card-body text-center">
                                    <i class="fas fa-dumbbell fa-2x text-primary mb-2"></i>
                                    <h6 class="card-subtitle mb-2 text-muted">Hizmet</h6>
                                    @if (Model.Hizmet != null)
                                    {
                                        <p class="mb-0"><strong>@Model.Hizmet.Ad</strong></p>
                                        <small class="text-muted">@Model.Hizmet.Sure dk - @Model.Hizmet.Ucret ₺</small>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Bilinmiyor</span>
                                    }
                                </div>
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="card bg-light">
                                <div class="card-body text-center">
                                    <i class="fas fa-calendar-alt fa-2x text-success mb-2"></i>
                                    <h6 class="card-subtitle mb-2 text-muted">Tarih</h6>
                                    <p class="mb-0"><strong>@Model.Tarih.ToString("dd.MM.yyyy")</strong></p>
                                    <small class="text-muted">@Model.Tarih.DayOfWeek</small>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="card bg-light">
                                <div class="card-body text-center">
                                    <i class="fas fa-clock fa-2x text-warning mb-2"></i>
                                    <h6 class="card-subtitle mb-2 text-muted">Saat</h6>
                                    <p class="mb-0"><strong>@Model.Saat</strong></p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <form asp-action="Edit" asp-route-id="@Model.Id" method="post">
                        @Html.AntiForgeryToken()

                        <div class="card border-primary mb-3">
                            <div class="card-header bg-primary text-white">
                                <h5 class="mb-0"><i class="fas fa-check-circle me-2"></i>Randevu Durumu</h5>
                            </div>
                            <div class="card-body">
                                <div class="form-check form-switch">
                                    <input class="form-check-input" type="checkbox" id="Onaylandi" name="Onaylandi" value="true" @(Model.Onaylandi ? "checked" : "") />
                                    <label class="form-check-label" for="Onaylandi">
                                        <strong>Randevu Onaylı</strong>
                                        <br />
                                        <small class="text-muted">Bu kutucuğu işaretleyerek randevuyu onaylayabilir veya iptal edebilirsiniz.</small>
                                    </label>
                                </div>

                                <div class="mt-3">
                                    <div id="durum-mesaj" class="alert @(Model.Onaylandi ? "alert-success" : "alert-warning")">
                                        <i class="fas @(Model.Onaylandi ? "fa-check-circle" : "fa-clock") me-2"></i>
                                        <strong>Mevcut Durum:</strong>
                                        <span id="durum-text">@(Model.Onaylandi ? "Onaylandı" : "Onay Bekliyor")</span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-2"></i>Geri Dön
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-save me-2"></i>Güncelle
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.getElementById('Onaylandi').addEventListener('change', function() {
            const durumMesaj = document.getElementById('durum-mesaj');
            const durumText = document.getElementById('durum-text');

            if (this.checked) {
                durumMesaj.className = 'alert alert-success';
                durumText.textContent = 'Onaylandı';
            } else {
                durumMesaj.className = 'alert alert-warning';
                durumText.textContent = 'Onay Bekliyor';
            }
        });
    </script>
}

<style>
    .form-check-input {
        width: 3em;
        height: 1.5em;
        cursor: pointer;
    }

        .form-check-input:checked {
            background-color: #198754;
            border-color: #198754;
        }

    .card.bg-light {
        border: 2px solid #e9ecef;
    }
</style>