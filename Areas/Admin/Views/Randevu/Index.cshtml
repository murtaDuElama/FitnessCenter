@model List<Randevu>

@{
    ViewData["Title"] = "Randevular";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>
            <i class="fas fa-calendar-check me-2"></i>Randevular
        </h2>
        <div>
            <span class="badge bg-primary me-2">Toplam: @Model.Count</span>
            <span class="badge bg-success me-2">Onaylı: @Model.Count(r => r.Onaylandi)</span>
            <span class="badge bg-warning">Bekleyen: @Model.Count(r => !r.Onaylandi)</span>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Delete"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            <i class="fas fa-trash me-2"></i>@TempData["Delete"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Warning"] != null)
    {
        <div class="alert alert-warning alert-dismissible fade show">
            <i class="fas fa-exclamation-triangle me-2"></i>@TempData["Warning"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            <i class="fas fa-exclamation-circle me-2"></i>@TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="table-dark">
                        <tr>
                            <th>ID</th>
                            <th>Üye</th>
                            <th>Antrenör</th>
                            <th>Hizmet</th>
                            <th>Tarih</th>
                            <th>Saat</th>
                            <th class="text-center">Durum</th>
                            <th class="text-center">İşlem</th>
                        </tr>
                    </thead>

                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var item in Model)
                            {
                                <tr class="@(item.Onaylandi ? "" : "table-warning")">
                                    <td><strong>@item.Id</strong></td>

                                    <td>@(item.User?.UserName ?? "-")</td>

                                    <td>@(item.Antrenor?.AdSoyad ?? "-")</td>

                                    <td>
                                        <span class="badge bg-primary">
                                            @(item.Hizmet?.Ad ?? "-")
                                        </span>
                                    </td>

                                    <td>@item.Tarih.ToString("dd.MM.yyyy")</td>
                                    <td>@item.Saat</td>

                                    <td class="text-center">
                                        @if (item.Onaylandi)
                                        {
                                            <span class="badge bg-success">Onaylandı</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning text-dark">Bekliyor</span>
                                        }
                                    </td>

                                    <td class="text-center">
                                        <div class="btn-group" role="group">
                                            @if (!item.Onaylandi)
                                            {
                                                <!-- Onayla Butonu -->
                                                <form asp-action="Onayla" method="post" class="d-inline">
                                                    <input type="hidden" name="id" value="@item.Id" />
                                                    <button type="submit" class="btn btn-success btn-sm"
                                                            onclick="return confirm('Bu randevuyu onaylamak istediğinizden emin misiniz?')">
                                                        <i class="fas fa-check me-1"></i>Onayla
                                                    </button>
                                                </form>
                                            }
                                            else
                                            {
                                                <!-- İptal Et Butonu -->
                                                <form asp-action="IptalEt" method="post" class="d-inline">
                                                    <input type="hidden" name="id" value="@item.Id" />
                                                    <button type="submit" class="btn btn-warning btn-sm"
                                                            onclick="return confirm('Bu randevuyu iptal etmek istediğinizden emin misiniz?')">
                                                        <i class="fas fa-times me-1"></i>İptal Et
                                                    </button>
                                                </form>
                                            }

                                            <!-- Sil Butonu -->
                                            <form asp-action="Sil" method="post" class="d-inline">
                                                <input type="hidden" name="id" value="@item.Id" />
                                                <button type="submit" class="btn btn-danger btn-sm"
                                                        onclick="return confirm('Bu randevuyu silmek istediğinizden emin misiniz? Bu işlem geri alınamaz!')">
                                                    <i class="fas fa-trash me-1"></i>Sil
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="8" class="text-center text-muted py-4">
                                    <i class="fas fa-inbox fa-3x mb-3 d-block"></i>
                                    Henüz randevu bulunmuyor.
                                </td>
                            </tr>
                        }
                    </tbody>

                </table>
            </div>
        </div>
    </div>
</div>

<style>
    .table-warning {
        background-color: #fff3cd !important;
    }

    .badge {
        font-size: 0.85rem;
        padding: 0.35em 0.65em;
    }
</style>
