@model List<Randevu>

@{
    ViewData["Title"] = "Randevular";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-calendar-check me-2"></i>Randevular</h2>
        <div>
            <span class="badge bg-primary me-2">Toplam: @Model.Count</span>
            <span class="badge bg-success me-2">Onaylı: @Model.Count(r => r.Onaylandi)</span>
            <span class="badge bg-warning">Bekleyen: @Model.Count(r => !r.Onaylandi)</span>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Delete"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>@TempData["Delete"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="table-dark">
                        <tr>
                            <th><i class="fas fa-hashtag me-2"></i>ID</th>
                            <th><i class="fas fa-user me-2"></i>Üye</th>
                            <th><i class="fas fa-user-tie me-2"></i>Antrenör</th>
                            <th><i class="fas fa-dumbbell me-2"></i>Hizmet</th>
                            <th><i class="fas fa-calendar me-2"></i>Tarih</th>
                            <th><i class="fas fa-clock me-2"></i>Saat</th>
                            <th class="text-center"><i class="fas fa-check-circle me-2"></i>Durum</th>
                            <th class="text-center">Sil</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            @foreach (var item in Model)
                            {
                                <tr class="@(item.Onaylandi ? "" : "table-warning")">
                                    <td><strong>@item.Id</strong></td>
                                    <td>
                                        <i class="fas fa-user-circle text-primary me-2"></i>
                                        @if (item.User != null)
                                        {
                                            <span>@item.User.UserName</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        @if (item.Antrenor != null)
                                        {
                                            <span><i class="fas fa-user-tie text-info me-2"></i>@item.Antrenor.AdSoyad</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        @if (item.Hizmet != null)
                                        {
                                            <span class="badge bg-primary">@item.Hizmet.Ad</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        <i class="fas fa-calendar-alt text-success me-2"></i>
                                        @item.Tarih.ToString("dd.MM.yyyy")
                                    </td>
                                    <td>
                                        <i class="fas fa-clock text-warning me-2"></i>
                                        @item.Saat
                                    </td>
                                    <td class="text-center">
                                        @if (item.Onaylandi)
                                        {
                                            <span class="badge bg-success">
                                                <i class="fas fa-check me-1"></i>Onaylandı
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning text-dark">
                                                <i class="fas fa-clock me-1"></i>Bekliyor
                                            </span>
                                        }
                                    </td>

                                    <td class="text-center">
                                        <form asp-action="Sil" method="post" class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="id" value="@item.Id" />
                                            <button type="submit" class="btn btn-sm btn-danger"
                                                    title="Sil"
                                                    onclick="return confirm('Bu randevuyu silmek istediğinize emin misiniz?');">
                                                <i class="fas fa-trash me-1"></i>Sil
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="8" class="text-center text-muted py-4">
                                    <i class="fas fa-inbox fa-3x mb-3 d-block"></i>
                                    Henüz randevu bulunmuyor.
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<style>
    .table th {
        white-space: nowrap;
    }

    .table-warning {
        background-color: #fff3cd !important;
    }

    .badge {
        font-size: 0.875rem;
        padding: 0.35em 0.65em;
    }
</style>
