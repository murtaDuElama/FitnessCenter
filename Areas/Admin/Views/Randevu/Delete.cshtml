@model Randevu

@{
    ViewData["Title"] = "Randevu Sil";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card shadow-sm border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0"><i class="fas fa-trash me-2"></i>Randevu Sil</h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning" role="alert">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        <strong>Dikkat!</strong> Bu randevuyu silmek istediğinize emin misiniz? Bu işlem geri alınamaz.
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <div class="card bg-light">
                                <div class="card-body">
                                    <h6 class="card-subtitle mb-3 text-muted">
                                        <i class="fas fa-user me-2"></i>Üye Bilgileri
                                    </h6>
                                    <dl class="row mb-0">
                                        <dt class="col-sm-4">Üye:</dt>
                                        <dd class="col-sm-8">
                                            @if (Model.User != null)
                                            {
                                                <span>@Model.User.UserName</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">-</span>
                                            }
                                        </dd>
                                    </dl>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="card bg-light">
                                <div class="card-body">
                                    <h6 class="card-subtitle mb-3 text-muted">
                                        <i class="fas fa-user-tie me-2"></i>Antrenör Bilgileri
                                    </h6>
                                    <dl class="row mb-0">
                                        <dt class="col-sm-4">Antrenör:</dt>
                                        <dd class="col-sm-8">
                                            @if (Model.Antrenor != null)
                                            {
                                                <span>@Model.Antrenor.AdSoyad</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">-</span>
                                            }
                                        </dd>
                                    </dl>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-4">
                            <div class="card bg-light text-center">
                                <div class="card-body">
                                    <i class="fas fa-dumbbell fa-2x text-primary mb-2"></i>
                                    <h6 class="text-muted">Hizmet</h6>
                                    @if (Model.Hizmet != null)
                                    {
                                        <p class="mb-0"><strong>@Model.Hizmet.Ad</strong></p>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </div>
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="card bg-light text-center">
                                <div class="card-body">
                                    <i class="fas fa-calendar-alt fa-2x text-success mb-2"></i>
                                    <h6 class="text-muted">Tarih</h6>
                                    <p class="mb-0"><strong>@Model.Tarih.ToString("dd.MM.yyyy")</strong></p>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="card bg-light text-center">
                                <div class="card-body">
                                    <i class="fas fa-clock fa-2x text-warning mb-2"></i>
                                    <h6 class="text-muted">Saat</h6>
                                    <p class="mb-0"><strong>@Model.Saat</strong></p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="card border-info mb-3">
                        <div class="card-body">
                            <dl class="row mb-0">
                                <dt class="col-sm-3">Durum:</dt>
                                <dd class="col-sm-9">
                                    @if (Model.Onaylandi)
                                    {
                                        <span class="badge bg-success">
                                            <i class="fas fa-check me-1"></i>Onaylandı
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning text-dark">
                                            <i class="fas fa-clock me-1"></i>Onay Bekliyor
                                        </span>
                                    }
                                </dd>
                            </dl>
                        </div>
                    </div>

                    <form asp-action="Sil" asp-route-id="@Model.Id" method="post">
                        @Html.AntiForgeryToken()
                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-2"></i>Geri Dön
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash me-2"></i>Evet, Sil
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>