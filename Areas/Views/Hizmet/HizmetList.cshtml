@model List<Hizmet>

<h2 class="mb-4">Hizmet Yönetimi</h2>
<hr />

<a href="/Hizmet/Create" class="btn btn-primary mb-3">Yeni Hizmet Ekle</a>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Ad</th>
            <th>Süre (dk)</th>
            <th>Ücret (₺)</th>
            <th>İşlemler</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var h in Model)
        {
            <tr>
                <td>@h.Ad</td>
                <td>@h.Sure</td>
                <td>@h.Ucret</td>
                <td>
                    <a href="/Hizmet/Edit/@h.Id" class="btn btn-warning btn-sm">Düzenle</a>
                    <a href="/Hizmet/Delete/@h.Id" class="btn btn-danger btn-sm">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
