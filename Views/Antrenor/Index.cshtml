@model List<Antrenor>

@{
    ViewData["Title"] = "Antrenörlerimiz";
}

<div class="container-fluid">
    <div class="text-center mb-5">
        <h1 class="display-4">
            <i class="fas fa-user-tie me-3"></i>Antrenörlerimiz
        </h1>
        @if (User.IsInRole("Admin"))
        {
            <div class="text-end mb-4">
                <a asp-area="Admin"
                   asp-controller="Antrenor"
                   asp-action="Create"
                   class="btn btn-primary">
                    <i class="fas fa-plus me-2"></i>Yeni Antrenör Ekle
                </a>
            </div>
        }

        <p class="lead text-muted">Profesyonel ve deneyimli antrenör kadromuz</p>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="row g-4">
            @foreach (var antrenor in Model)
            {
                <div class="col-md-4 col-lg-3">
                    <div class="card h-100 shadow-sm hover-card">
                        @if (!string.IsNullOrEmpty(antrenor.FotografUrl))
                        {
                            <img src="@antrenor.FotografUrl"
                                 class="card-img-top"
                                 alt="@antrenor.AdSoyad"
                                 style="height: 250px; object-fit: cover;">
                        }
                        else
                        {
                            <div class="card-img-top bg-secondary d-flex align-items-center justify-content-center"
                                 style="height: 250px;">
                                <i class="fas fa-user fa-5x text-white"></i>
                            </div>
                        }

                        <div class="card-body text-center">
                            <h5 class="card-title">@antrenor.AdSoyad</h5>
                            <p class="card-text">
                                <span class="badge bg-primary">@antrenor.Uzmanlik</span>
                            </p>

                            @* 🔴 SADECE ADMIN *@
                            @if (User.IsInRole("Admin"))
                            {
                                <div class="d-flex justify-content-center gap-2 mt-3">
                                    <a href="/Admin/Antrenor/Edit/@antrenor.Id"
                                       class="btn btn-warning btn-sm">
                                        Düzenle
                                    </a>

                                    <a href="/Admin/Antrenor/Delete/@antrenor.Id"
                                       class="btn btn-danger btn-sm">
                                        Sil
                                    </a>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info text-center" role="alert">
            <i class="fas fa-info-circle fa-2x mb-3 d-block"></i>
            <h4>Henüz antrenör bulunmuyor.</h4>
        </div>
    }
</div>

<style>
    .hover-card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .hover-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.2) !important;
        }
</style>
