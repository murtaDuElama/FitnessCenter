@model List<Antrenor>

@{
    ViewData["Title"] = "Antrenörlerimiz";
}

<!-- PAGE HEADER -->
<div class="page-header">
    <h1><i class="fas fa-users me-3"></i>Antrenörlerimiz</h1>
    <p>Profesyonel ve deneyimli antrenör kadromuz</p>
</div>

<div class="container">
    @if (User.IsInRole("Admin"))

    {
        <div class="text-end mb-4">
            <a asp-area="Admin" asp-controller="Antrenor" asp-action="Create" class="btn btn-success-custom">
                <i class="fas fa-user-plus me-2"></i>Yeni Antrenör Ekle
            </a>
        </div>
    }

    @if (Model != null && Model.Any())

    {
        <div class="row g-4">
            @{
                int index = 0;
            }
            @foreach (var antrenor in Model)

            {

                var borderColors = new[] { "var(--primary)", "var(--success)", "var(--brown)" };

                var borderColor = borderColors[index % borderColors.Length];

                <div class="col-md-4 col-lg-3">
                    <div class="card-custom h-100" style="border-top: 4px solid @borderColor;">
                        @if (!string.IsNullOrEmpty(antrenor.FotografUrl))

                        {
                            <img src="@antrenor.FotografUrl" class="card-img-top" alt="@antrenor.AdSoyad"
                                style="height: 250px; object-fit: cover;">
                        }

                        else

                        {
                            <div class="card-img-top d-flex align-items-center justify-content-center"
                                style="height: 250px; background: linear-gradient(135deg, #1a365d 0%, #48bb78 100%);">
                                <i class="fas fa-user fa-5x text-white opacity-50"></i>
                            </div>
                        }

                        <div class="card-body text-center p-4">
                            <h5 class="fw-bold mb-2">@antrenor.AdSoyad</h5>
                            <span class="badge badge-primary-custom mb-3">
                                <i class="fas fa-award me-1"></i>@antrenor.Uzmanlik
                            </span>

                            <div class="text-muted small mb-3">
                                <i class="fas fa-clock me-1"></i>
                                @antrenor.CalismaBaslangicSaati - @antrenor.CalismaBitisSaati
                            </div>

                            @if (User.IsInRole("Admin"))
                            {
                                <div class="d-flex justify-content-center gap-2 mt-3">
                                    <a href="/Admin/Antrenor/Edit/@antrenor.Id" class="btn btn-warm btn-sm">
                                        <i class="fas fa-edit me-1"></i>Düzenle
                                    </a>

                                    <a href="/Admin/Antrenor/Delete/@antrenor.Id" class="btn btn-outline-danger btn-sm">
                                        <i class="fas fa-trash me-1"></i>Sil
                                    </a>
                                </div>
                            }
                        </div>
                    </div>
                </div>
                index++;

            }
        </div>
    }

    else

    {
        <div class="empty-state">
            <i class="fas fa-user-slash"></i>
            <h4>Henüz Antrenör Bulunmuyor</h4>
            <p>Sistemde kayıtlı antrenör bulunmamaktadır.</p>
        </div>
    }
</div>
