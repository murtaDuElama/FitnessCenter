<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Fitness Center</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>

    <!-- NAVBAR -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">

            <a class="navbar-brand" href="/">FITNESS CENTER</a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- NAVBAR MENÜ -->
            <div class="collapse navbar-collapse" id="navbarNav">

                <ul class="navbar-nav ms-auto">

                    <!-- Herkese görünen bağlantılar -->
                    <li class="nav-item"><a class="nav-link" href="/Hizmet">Hizmetler</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Antrenor">Antrenörler</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Randevu">Randevu Al</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Ai">AI Öneri</a></li>

                    @if (!User.Identity.IsAuthenticated)
                    {
                        <!-- GİRİŞ YAPMAYANLAR -->
                        <li class="nav-item"><a class="nav-link" href="/Account/Login">Giriş</a></li>
                        <li class="nav-item"><a class="nav-link" href="/Account/Register">Kayıt Ol</a></li>
                    }
                    else
                    {
                        <!-- GİRİŞ YAPANLAR -->
                        <li class="nav-item">
                            <a class="nav-link" href="/Randevu/MyRandevus">Randevularım</a>
                        </li>

                        <!-- SADECE ADMIN KULLANICI GÖRÜR -->
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                    Admin
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" href="/Admin/Dashboard">Dashboard</a></li>
                                    <li><a class="dropdown-item" href="/Admin/HizmetList">Hizmet Yönetimi</a></li>
                                    <li><a class="dropdown-item" href="/Admin/AntrenorList">Antrenör Yönetimi</a></li>
                                    <li><a class="dropdown-item" href="/Admin/RandevuList">Randevu Yönetimi</a></li>
                                </ul>
                            </li>
                        }

                        <!-- ÇIKIŞ -->
                        <li class="nav-item">
                            <a class="nav-link text-danger" href="/Account/Logout">Çıkış Yap</a>
                        </li>
                    }

                </ul>

            </div>
        </div>
    </nav>

    <!-- SAYFA İÇERİĞİ -->
    <div class="container mt-4">
        @RenderBody()
    </div>

    <!-- FOOTER -->
    <footer class="bg-dark text-white text-center p-3 mt-5">
        <p>© 2025 Fitness Center Yönetim Sistemi</p>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Sayfa başına özel script -->
    @RenderSection("Scripts", required: false)

</body>
</html>
