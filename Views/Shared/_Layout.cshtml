<!DOCTYPE html>
<html lang="tr">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Fitness Center</title>

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">

    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <!-- Site CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>

<body>

    <!-- NAVBAR -->
    <nav class="navbar navbar-expand-lg navbar-dark navbar-custom">
        <div class="container">

            <a class="navbar-brand" href="/">
                <i class="fas fa-dumbbell me-2"></i>FITNESS CENTER
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">

                <ul class="navbar-nav ms-auto">

                    <!-- PUBLIC -->
                    <li class="nav-item">
                        <a class="nav-link" href="/Hizmet/Index">
                            <i class="fas fa-list-check me-1"></i>Hizmetler
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="/Antrenor/Index">
                            <i class="fas fa-users me-1"></i>Antrenörler
                        </a>
                    </li>

                    <!-- ADMIN ÜST MENÜ -->
                    @if (User.IsInRole("Admin"))
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                <i class="fas fa-cog me-1"></i>Admin Panel
                            </a>
                            <ul class="dropdown-menu">
                                <li>
                                    <a class="dropdown-item" href="/Admin/Home/Index">
                                        <i class="fas fa-home me-2 text-primary"></i>Ana Sayfa
                                    </a>
                                </li>
                                <li>
                                    <hr class="dropdown-divider">
                                </li>
                                <li>
                                    <a class="dropdown-item" href="/Admin/Randevu/Index">
                                        <i class="fas fa-calendar me-2 text-success"></i>Randevular
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" href="/Admin/Hizmet/Index">
                                        <i class="fas fa-list me-2 text-info"></i>Hizmetler
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" href="/Admin/Antrenor/Index">
                                        <i class="fas fa-user-tie me-2 text-warning"></i>Antrenörler
                                    </a>
                                </li>
                                <li>
                                    <hr class="dropdown-divider">
                                </li>
                                <li>
                                    <a class="dropdown-item" href="/Admin/Raporlar/Index">
                                        <i class="fas fa-chart-line me-2 text-danger"></i>API Raporları
                                    </a>
                                </li>
                            </ul>
                        </li>
                    }

                    <!-- USER -->
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="/AI/Index">
                                <i class="fas fa-robot me-1"></i>AI Asistan
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/ImageGeneration/Index">
                                <i class="fas fa-image me-1"></i>Görsel Üretme
                            </a>
                        </li>
                    }

                    <!-- AUTH -->
                    @if (!User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="/Account/Login">
                                <i class="fas fa-sign-in-alt me-1"></i>Giriş
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Account/Register">
                                <i class="fas fa-user-plus me-1"></i>Kayıt Ol
                            </a>
                        </li>
                    }
                    else
                    {
                        <!-- USER ACTIONS -->
                        @if (!User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" href="/Randevu/SelectService">
                                    <i class="fas fa-calendar-plus me-1"></i>Randevu Al
                                </a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" href="/Randevu/MyRandevus">
                                    <i class="fas fa-calendar-check me-1"></i>Randevularım
                                </a>
                            </li>
                        }

                        <!-- USER INFO -->
                        <li class="nav-item d-flex align-items-center">
                            <span class="text-light ms-2 me-2 opacity-75">
                                <i class="fas fa-user-circle me-1"></i>@User.Identity.Name
                            </span>
                        </li>

                        <!-- DELETE ACCOUNT (USER) -->
                        @if (!User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <form asp-controller="Account" asp-action="DeleteAccount" method="post"
                                    onsubmit="return confirm('Hesabınızı kalıcı olarak silmek istediğinize emin misiniz?');"
                                    class="d-flex align-items-center h-100">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="nav-link btn btn-link text-warning"
                                        style="text-decoration:none;">
                                        <i class="fas fa-trash-alt me-1"></i>Hesap Sil
                                    </button>
                                </form>
                            </li>
                        }

                        <!-- LOGOUT -->
                        <li class="nav-item">
                            <a class="nav-link text-danger" href="/Account/Logout">
                                <i class="fas fa-sign-out-alt me-1"></i>Çıkış
                            </a>
                        </li>
                    }

                </ul>

            </div>
        </div>
    </nav>

    <!-- CONTENT -->
    <main class="flex-grow-1">
        <div class="container mt-4 mb-5">
            @RenderBody()
        </div>
    </main>

    <!-- FOOTER -->
    <footer class="footer-custom text-center">
        <div class="container">
            <p class="mb-0">
                <i class="fas fa-dumbbell me-2"></i>
                © 2025 Fitness Center Yönetim Sistemi
                <span class="mx-2">|</span>
                <i class="fas fa-heart text-danger"></i> Sağlıklı Yaşam
            </p>
        </div>
    </footer>

    <!-- JS -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)

</body>

</html>
