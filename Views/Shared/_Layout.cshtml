<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Fitness Center</title>

    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <!-- Site CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>

<body>

    <!-- NAVBAR -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">

            <a class="navbar-brand" href="/">FITNESS CENTER</a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">

                <ul class="navbar-nav ms-auto">

                    <!-- PUBLIC -->
                    <li class="nav-item">
                        <a class="nav-link" href="/Hizmet/Index">Hizmetler</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="/Antrenor/Index">Antrenörler</a>
                    </li>

                    <!-- ADMIN ÜST MENÜ -->
                    @if (User.IsInRole("Admin"))
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                Admin Panel
                            </a>
                            <ul class="dropdown-menu">
                                <li>
                                    <a class="dropdown-item" href="/Admin/Home/Index">
                                        <i class="fas fa-home"></i> Ana Sayfa
                                    </a>
                                </li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <a class="dropdown-item" href="/Admin/Randevu/Index">
                                        <i class="fas fa-calendar"></i> Randevular
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" href="/Admin/Hizmet/Index">
                                        <i class="fas fa-list"></i> Hizmetler
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" href="/Admin/Antrenor/Index">
                                        <i class="fas fa-user-tie"></i> Antrenörler
                                    </a>
                                </li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <a class="dropdown-item" href="/Admin/Raporlar/Index">
                                        <i class="fas fa-chart-line"></i> API Raporları
                                    </a>
                                </li>
                            </ul>
                        </li>
                    }

                    <!-- USER -->
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="/AI/Index">
                                <i class="fas fa-robot me-1"></i>AI Asistan
                            </a>
                        </li>
                    }

                    <!-- AUTH -->
                    @if (!User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="/Account/Login">Giriş</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Account/Register">Kayıt Ol</a>
                        </li>
                    }
                    else
                    {
                        <!-- USER ACTIONS -->
                        @if (!User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" href="/Randevu/SelectService">Randevu Al</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" href="/Randevu/MyRandevus">Randevularım</a>
                            </li>
                        }

                        <!-- USER INFO -->
                        <li class="nav-item d-flex align-items-center">
                            <span class="text-light ms-2 me-2">
                                Merhaba, @User.Identity.Name
                            </span>
                        </li>

                        <!-- DELETE ACCOUNT (USER) -->
                        @if (!User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <form asp-controller="Account"
                                      asp-action="DeleteAccount"
                                      method="post"
                                      onsubmit="return confirm('Hesabınızı kalıcı olarak silmek istediğinize emin misiniz?');"
                                      class="d-flex align-items-center h-100">
                                    @Html.AntiForgeryToken()
                                    <button type="submit"
                                            class="nav-link btn btn-link text-secondary"
                                            style="text-decoration:none;">
                                        Hesap Sil
                                    </button>
                                </form>
                            </li>
                        }

                        <!-- LOGOUT -->
                        <li class="nav-item">
                            <a class="nav-link text-danger" href="/Account/Logout">Çıkış Yap</a>
                        </li>
                    }

                </ul>

            </div>
        </div>
    </nav>

    <!-- CONTENT -->
    <div class="container mt-4 mb-5" style="min-height: 80vh;">
        @RenderBody()
    </div>

    <!-- FOOTER -->
    <footer class="bg-dark text-white text-center p-3 mt-auto">
        <div class="container">
            <p class="mb-0">© 2025 Fitness Center Yönetim Sistemi</p>
        </div>
    </footer>

    <!-- JS (Sıra önemli: jQuery -> Validate -> Bootstrap -> RenderSection) -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
