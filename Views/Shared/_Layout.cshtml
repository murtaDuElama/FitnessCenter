<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Fitness Center</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>

<body>

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">

            <a class="navbar-brand" href="/">FITNESS CENTER</a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">

                <ul class="navbar-nav ms-auto">

                    <li class="nav-item"><a class="nav-link" href="/Hizmet/Index">Hizmetler</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Antrenor/Index">Antrenörler</a></li>

                    @if (!User.IsInRole("Admin"))
                    {
                        <li class="nav-item"><a class="nav-link" href="/Ai/Index">AI Öneri</a></li>
                    }

                    @if (!User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item"><a class="nav-link" href="/Account/Login">Giriş</a></li>
                        <li class="nav-item"><a class="nav-link" href="/Account/Register">Kayıt Ol</a></li>
                    }
                    else
                    {
                        @if (!User.IsInRole("Admin"))
                        {
                            <li class="nav-item"><a class="nav-link" href="/Randevu/SelectService">Randevu Al</a></li>

                            
                            <li class="nav-item">
                                <a class="nav-link" href="/Randevu/MyRandevus">Randevularım</a>
                            </li>
                        }

                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle bg-danger text-white rounded px-2 mx-2" href="#" role="button" data-bs-toggle="dropdown">
                                    Admin Panel
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" href="/Admin/Dashboard/Index">Dashboard</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" href="/Admin/Hizmet/Index">Hizmet Yönetimi</a></li>
                                    <li><a class="dropdown-item" href="/Admin/Antrenor/Index">Antrenör Yönetimi</a></li>
                                    <li><a class="dropdown-item" href="/Admin/Randevu/Index">Randevu Yönetimi</a></li>
                                </ul>
                            </li>
                        }

                        <li class="nav-item d-flex align-items-center">
                            <span class="text-light ms-2 me-2">Merhaba, @User.Identity.Name</span>
                        </li>

                        @if (!User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <form asp-controller="Account" asp-action="DeleteAccount" method="post" onsubmit="return confirm('Hesabınızı kalıcı olarak silmek istediğinize emin misiniz? Bu işlem geri alınamaz!');" class="d-flex align-items-center h-100">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="nav-link btn btn-link text-secondary" style="text-decoration:none;">Hesap Sil</button>
                                </form>
                            </li>
                        }

                        <li class="nav-item">
                            <a class="nav-link text-danger" href="/Account/Logout">Çıkış Yap</a>
                        </li>
                    }

                </ul>

            </div>
        </div>
    </nav>

    <div class="container mt-4 mb-5" style="min-height: 80vh;">
        @RenderBody()
    </div>

    <footer class="bg-dark text-white text-center p-3 mt-auto">
        <div class="container">
            <p class="mb-0">© 2025 Fitness Center Yönetim Sistemi</p>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>