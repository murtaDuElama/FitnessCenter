@model FitnessCenter.Models.AIResponseModel
@{
    ViewData["Title"] = "AI Önerisi";
}

<h2>@(Model?.Headline ?? "AI Önerisi")</h2>
<hr />

@if (Model == null)
{
    <div class="alert alert-warning">
        Sonuç verisi bulunamadı. Lütfen tekrar deneyin.
    </div>

    <a asp-action="Index" class="btn btn-secondary mt-3">Yeni Öneri Al</a>
}
else
{
    <div class="row">
        <div class="col-md-6 mb-4">
            <div class="card h-100">
                <div class="card-header bg-primary text-white">Egzersiz Planı</div>
                <div class="card-body">
                    @if (Model.WorkoutPlan != null && Model.WorkoutPlan.Any())
                    {
                        <ul class="mb-0">
                            @foreach (var item in Model.WorkoutPlan)
                            {
                                <li>@item</li>
                            }
                        </ul>
                    }
                    else
                    {
                        <div class="text-muted">Egzersiz planı bulunamadı.</div>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-6 mb-4">
            <div class="card h-100">
                <div class="card-header bg-success text-white">Beslenme Önerisi</div>
                <div class="card-body">
                    @if (Model.NutritionPlan != null && Model.NutritionPlan.Any())
                    {
                        <ul class="mb-0">
                            @foreach (var item in Model.NutritionPlan)
                            {
                                <li>@item</li>
                            }
                        </ul>
                    }
                    else
                    {
                        <div class="text-muted">Beslenme önerisi bulunamadı.</div>
                    }
                </div>
            </div>
        </div>
    </div>

    @if (!string.IsNullOrWhiteSpace(Model.ExtraNote))
    {
        <div class="alert alert-info mt-3">@Model.ExtraNote</div>
    }

    <a asp-action="Index" class="btn btn-secondary mt-3">Yeni Öneri Al</a>
}
