@model FitnessCenter.Models.AIRequestModel
@{
    ViewData["Title"] = "AI Fitness Öneri";
}

<h2 class="mb-4">AI Destekli Fitness Öneri Sistemi</h2>
<p class="text-muted">Hedefinizi ve günlük ayırabileceğiniz süreyi girin, sistem size kişiselleştirilmiş bir plan oluştursun.</p>
<hr />

<form asp-action="Analyze" method="post" class="row g-3">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="col-md-6">
        <label asp-for="FitnessGoal" class="form-label"></label>
        <select asp-for="FitnessGoal" class="form-select">
            <option value="">Seçiniz</option>
            <option value="Kilo verme">Kilo verme</option>
            <option value="Kilo alma">Kilo alma</option>
            <option value="Kas geliştirme">Kas geliştirme</option>
            <option value="Esneklik artırma">Esneklik artırma</option>
        </select>
        <span asp-validation-for="FitnessGoal" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label asp-for="Intensity" class="form-label"></label>
        <select asp-for="Intensity" class="form-select">
            <option value="">Seçiniz</option>
            <option value="Düşük">Düşük</option>
            <option value="Orta">Orta</option>
            <option value="Yüksek">Yüksek</option>
        </select>
        <span asp-validation-for="Intensity" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label asp-for="DailyMinutes" class="form-label"></label>
        <input asp-for="DailyMinutes" type="number" min="10" max="240" class="form-control" placeholder="Dakika cinsinden" />
        <span asp-validation-for="DailyMinutes" class="text-danger"></span>
    </div>

    <div class="col-12">
        <label asp-for="SpecialNotes" class="form-label"></label>
        <textarea asp-for="SpecialNotes" class="form-control" rows="4" placeholder="Sağlık durumları veya özel tercihler"></textarea>
        <span asp-validation-for="SpecialNotes" class="text-danger"></span>
    </div>

    <div class="col-12">
        <button type="submit" class="btn btn-primary w-100">Öneri Al</button>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
