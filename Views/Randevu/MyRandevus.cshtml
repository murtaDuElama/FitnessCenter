@model List<Randevu>

@{
    ViewData["Title"] = "Randevularım";
}

<!-- PAGE HEADER -->
<div class="page-header">
    <h1><i class="fas fa-calendar-check me-3"></i>Randevularım</h1>
    <p>Tüm randevularınızı buradan takip edebilirsiniz</p>
</div>

<div class="container">
    @if (TempData["Success"] != null)

    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)

    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>@TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (Model.Count == 0)

    {
        <div class="empty-state">
            <i class="fas fa-calendar-xmark"></i>
            <h4>Henüz Randevunuz Yok</h4>
            <p class="mb-4">Hemen ilk randevunuzu oluşturun ve sağlıklı yaşama başlayın!</p>
            <a href="/Randevu/SelectService" class="btn btn-primary-custom">
                <i class="fas fa-plus-circle me-2"></i>Randevu Oluştur
            </a>
        </div>
    }

    else

    {
        <!-- Özet Kartları -->
        <div class="row g-3 mb-4">
            <div class="col-md-4">
                <div class="p-3 bg-white rounded-xl shadow-soft text-center">
                    <i class="fas fa-calendar-alt fa-2x text-primary mb-2"></i>
                    <h4 class="fw-bold text-primary-custom mb-0">@Model.Count</h4>
                    <small class="text-muted">Toplam Randevu</small>
                </div>
            </div>
            <div class="col-md-4">
                <div class="p-3 bg-white rounded-xl shadow-soft text-center">
                    <i class="fas fa-check-circle fa-2x text-success mb-2"></i>
                    <h4 class="fw-bold text-success-custom mb-0">@Model.Count(r => r.Onaylandi)</h4>
                    <small class="text-muted">Onaylanan</small>
                </div>
            </div>
            <div class="col-md-4">
                <div class="p-3 bg-white rounded-xl shadow-soft text-center">
                    <i class="fas fa-hourglass-half fa-2x text-warning mb-2"></i>
                    <h4 class="fw-bold text-warm mb-0">@Model.Count(r => !r.Onaylandi)</h4>
                    <small class="text-muted">Bekleyen</small>
                </div>
            </div>
        </div>

        <!-- Randevu Tablosu -->
        <div class="table-responsive">
            <table class="table table-custom">
                <thead>
                    <tr>
                        <th><i class="fas fa-tag me-2"></i>Hizmet</th>
                        <th><i class="fas fa-user-tie me-2"></i>Antrenör</th>
                        <th><i class="fas fa-calendar me-2"></i>Tarih</th>
                        <th><i class="fas fa-clock me-2"></i>Saat</th>
                        <th><i class="fas fa-info-circle me-2"></i>Durum</th>
                        <th><i class="fas fa-cog me-2"></i>İşlem</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var r in Model.OrderByDescending(x => x.Tarih))
                    {
                        <tr>
                            <td>
                                <span class="badge badge-primary-custom">
                                    @r.Hizmet?.Ad
                                </span>
                            </td>
                            <td class="fw-medium">@r.Antrenor?.AdSoyad</td>
                            <td>
                                <i class="fas fa-calendar-day text-muted me-1"></i>
                                @r.Tarih.ToString("dd MMM yyyy")
                            </td>
                            <td>
                                <i class="fas fa-clock text-muted me-1"></i>
                                @r.Saat
                            </td>
                            <td>
                                @if (r.Onaylandi)

                                {
                                    <span class="badge bg-success">
                                        <i class="fas fa-check me-1"></i>Onaylandı
                                    </span>
                                }

                                else

                                {
                                    <span class="badge bg-warning text-dark">
                                        <i class="fas fa-hourglass-half me-1"></i>Bekliyor
                                    </span>
                                }
                            </td>
                            <td>
                                <form asp-action="IptalEt" method="post" class="d-inline"
                                    onsubmit="return confirm('Bu randevuyu iptal etmek istediğinize emin misiniz?');">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="id" value="@r.Id" />
                                    <button type="submit" class="btn btn-outline-danger btn-sm">
                                        <i class="fas fa-times me-1"></i>İptal
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="text-center mt-4">
            <a href="/Randevu/SelectService" class="btn btn-success-custom">
                <i class="fas fa-plus-circle me-2"></i>Yeni Randevu Oluştur
            </a>
        </div>
    }
</div>
