@model List<string>

@{
    ViewData["Title"] = "Saat Seç";



    int hizmetId = (int)ViewBag.HizmetId;

    int antrenorId = (int)ViewBag.AntrenorId;



    string seciliTarih = ViewBag.SeciliTarih as string ?? DateTime.Today.ToString("yyyy-MM-dd");

    string seciliTarihLabel = ViewBag.SeciliTarihLabel as string ?? DateTime.Today.ToString("dd.MM.yyyy");
}

<!-- PAGE HEADER -->
<div class="page-header">
    <h1><i class="fas fa-clock me-3"></i>Randevu Saati</h1>
    <p>Uygun bir saat seçin ve randevunuzu tamamlayın</p>
</div>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="form-card">
                <!-- Tarih Seçimi -->
                <div class="mb-4 pb-4 border-bottom">
                    <h5 class="fw-bold mb-3">
                        <i class="fas fa-calendar-alt text-primary me-2"></i>Tarih Seçimi
                    </h5>
                    <form asp-action="SelectTime" asp-controller="Randevu" method="get" class="row g-3 align-items-end">
                        <input type="hidden" name="hizmetId" value="@hizmetId" />
                        <input type="hidden" name="antrenorId" value="@antrenorId" />

                        <div class="col-md-6">
                            <label class="form-label text-muted">Randevu Tarihi</label>
                            <input type="date" name="tarih" class="form-control form-control-custom"
                                min="@DateTime.Today.ToString("yyyy-MM-dd")" value="@seciliTarih" required />
                        </div>

                        <div class="col-md-3">
                            <button type="submit" class="btn btn-primary-custom w-100">
                                <i class="fas fa-sync-alt me-1"></i>Güncelle
                            </button>
                        </div>

                        <div class="col-md-3 text-end">
                            <span class="badge badge-warm fs-6">
                                <i class="fas fa-calendar me-1"></i>@seciliTarihLabel
                            </span>
                        </div>
                    </form>
                </div>

                @if (TempData["Error"] != null)

                {
                    <div class="alert alert-danger">
                        <i class="fas fa-exclamation-circle me-2"></i>@TempData["Error"]
                    </div>
                }

                <!-- Saat Seçimi -->
                <form asp-action="Create" asp-controller="Randevu" method="post">
                    @Html.AntiForgeryToken()

                    <input type="hidden" name="hizmetId" value="@hizmetId" />
                    <input type="hidden" name="antrenorId" value="@antrenorId" />
                    <input type="hidden" name="tarih" value="@seciliTarih" />

                    <h5 class="fw-bold mb-3">
                        <i class="fas fa-clock text-success me-2"></i>Müsait Saatler
                    </h5>

                    @if (Model != null && Model.Any())

                    {
                        <div class="mb-4">
                            <select name="saat" class="form-select form-control-custom" required id="saatSelect">
                                <option value="">-- Saat Seçiniz --</option>
                                @foreach (var saat in Model)

                                {
                                    <option value="@saat">@saat</option>
                                }
                            </select>
                        </div>

                        <!-- Görsel saat grid -->
                        <div class="time-slot-grid mb-4">
                            @foreach (var saat in Model)

                            {
                                <button type="button" class="time-slot-btn" data-saat="@saat">
                                    <i class="fas fa-clock me-1"></i>@saat
                                </button>
                            }
                        </div>

                        <button type="submit" class="btn btn-success-custom w-100 py-3">
                            <i class="fas fa-check-circle me-2"></i>Randevuyu Onayla
                        </button>
                    }

                    else

                    {
                        <div class="empty-state">
                            <i class="fas fa-calendar-times"></i>
                            <h4>Müsait Saat Bulunamadı</h4>
                            <p>Seçili gün için uygun saat bulunmamaktadır. Lütfen farklı bir tarih deneyin.</p>
                        </div>
                    }
                </form>

                <div class="text-center mt-4 pt-3 border-top">
                    <a href="/Randevu/SelectTrainer?hizmetId=@hizmetId" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Antrenör Seçimine Dön
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Saat butonlarına tıklama işlevi
        document.querySelectorAll('.time-slot-btn').forEach(btn => {
            btn.addEventListener('click', function () {
                // Tüm butonlardan active sınıfını kaldır
                document.querySelectorAll('.time-slot-btn').forEach(b => b.classList.remove('active'));
                // Tıklanan butona active ekle
                this.classList.add('active');
                // Select elementine değeri ata
                document.getElementById('saatSelect').value = this.dataset.saat;
            });
        });
    </script>
}
