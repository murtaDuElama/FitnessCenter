@model List<Hizmet>

@{
    ViewData["Title"] = "Hizmetlerimiz";



    // Hizmet ikonları

    var hizmetIkonlari = new Dictionary<string, string>
{
{ "Fitness", "fa-dumbbell" },
{ "Yoga", "fa-spa" },
{ "Pilates", "fa-person-walking" },
{ "Kardio", "fa-heart-pulse" },
{ "CrossFit", "fa-fire" }
};



    // Hizmet görselleri

    var hizmetGorselleri = new Dictionary<string, string>
{
{ "Fitness", "https://images.unsplash.com/photo-1534438327276-14e5300c3a48?w=400&h=250&fit=crop" },
{ "Yoga", "https://images.unsplash.com/photo-1544367567-0f2fcb009e0b?w=400&h=250&fit=crop" },
{ "Pilates", "https://images.unsplash.com/photo-1518611012118-696072aa579a?w=400&h=250&fit=crop" }
};



    // Renk sınıfları döngüsü

    var renkler = new[] { "card-header-primary", "card-header-success", "card-header-warm" };
}

<!-- PAGE HEADER -->
<div class="page-header">
    <h1><i class="fas fa-list-check me-3"></i>Hizmetlerimiz</h1>
    <p>Profesyonel eğitmenler eşliğinde sunduğumuz hizmetler</p>
</div>

<div class="container">
    @if (User.IsInRole("Admin"))

    {
        <div class="text-end mb-4">
            <a href="/Admin/Hizmet/Create" class="btn btn-success-custom">
                <i class="fas fa-plus me-2"></i>Yeni Hizmet Ekle
            </a>
        </div>
    }

    <div class="row g-4">
        @{
            int index = 0;
        }
        @foreach (var h in Model)

        {

            var ikonClass = hizmetIkonlari.ContainsKey(h.Ad) ? hizmetIkonlari[h.Ad] : "fa-star";

            var gorselUrl = hizmetGorselleri.ContainsKey(h.Ad)

            ? hizmetGorselleri[h.Ad]

            : "https://images.unsplash.com/photo-1571019614242-c5c5dee9f50b?w=400&h=250&fit=crop";

            var renkClass = renkler[index % renkler.Length];

            <div class="col-md-4">
                <div class="service-card">
                    <!-- Görsel -->
                    <img src="@gorselUrl" alt="@h.Ad" class="w-100" style="height: 180px; object-fit: cover;">

                    <!-- Header -->
                    <div class="@renkClass text-center py-3">
                        <i class="fas @ikonClass fa-2x mb-2"></i>
                        <h4 class="mb-0 fw-bold">@h.Ad</h4>
                    </div>

                    <!-- Body -->
                    <div class="card-body text-center p-4">
                        <div class="price mb-3">
                            @h.Ucret ₺
                            <small>/seans</small>
                        </div>

                        <ul class="list-unstyled text-muted mb-4">
                            <li class="mb-2">
                                <i class="fas fa-clock text-primary me-2"></i>
                                Süre: @h.Sure dakika
                            </li>
                            <li class="mb-2">
                                <i class="fas fa-user-tie text-success me-2"></i>
                                Profesyonel Eğitmen
                            </li>
                            <li>
                                <i class="fas fa-certificate text-warning me-2"></i>
                                Kişisel Program
                            </li>
                        </ul>

                        @if (!User.IsInRole("Admin"))

                        {
                            @if (User.Identity != null && User.Identity.IsAuthenticated)
                            {
                                <a asp-controller="Randevu" asp-action="SelectTrainer" asp-route-hizmetId="@h.Id"
                                    class="btn btn-primary-custom w-100">
                                    <i class="fas fa-calendar-plus me-2"></i>Randevu Al
                                </a>
                            }
                            else
                            {
                                <a asp-controller="Account" asp-action="Login" class="btn btn-primary-custom w-100">
                                    <i class="fas fa-sign-in-alt me-2"></i>Giriş Yap
                                </a>
                            }
                        }

                        else

                        {
                            <div class="d-flex gap-2">
                                <a href="/Admin/Hizmet/Edit/@h.Id" class="btn btn-warm flex-fill">
                                    <i class="fas fa-edit me-1"></i>Düzenle
                                </a>
                                <a href="/Admin/Hizmet/Delete/@h.Id" class="btn btn-outline-danger flex-fill">
                                    <i class="fas fa-trash me-1"></i>Sil
                                </a>
                            </div>
                        }
                    </div>
                </div>
            </div>
            index++;

        }
    </div>
</div>