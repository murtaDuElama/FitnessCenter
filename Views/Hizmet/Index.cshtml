@model List<Hizmet>

@{
    ViewData["Title"] = "Hizmetlerimiz";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Hizmetlerimiz</h2>
        @if (User.IsInRole("Admin"))
        {
            <a href="/Admin/Hizmet/Create" class="btn btn-primary">
                <i class="bi bi-plus-lg"></i> Yönetim Panelinden Ekle
            </a>
        }
    </div>

    <div class="row">
        @foreach (var h in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm border-0">
                    <div class="card-header bg-dark text-white text-center py-3">
                        <h4 class="m-0">@h.Ad</h4>
                    </div>
                    <div class="card-body text-center d-flex flex-column justify-content-center">
                        <h1 class="card-title pricing-card-title">@h.Ucret ₺<small class="text-muted fw-light">/ders</small></h1>
                        <ul class="list-unstyled mt-3 mb-4">
                            <li><i class="bi bi-clock"></i> Süre: @h.Sure dk</li>
                            <li>Profesyonel Eğitmenler</li>
                        </ul>

                        @if (!User.IsInRole("Admin"))
                        {
                            @if (User.Identity != null && User.Identity.IsAuthenticated)
                            {
                                <a asp-controller="Randevu"
                                   asp-action="SelectTrainer"
                                   asp-route-hizmetId="@h.Id"
                                   class="btn btn-outline-primary">
                                    Randevu Al
                                </a>
                            }
                                        else
                            {
                                <a asp-controller="Account"
                                   asp-action="Login"
                                   class="btn btn-outline-primary">
                                    Randevu Al
                                </a>
                            }


                        }

                        @if (User.IsInRole("Admin"))
                        {
                            <div class="d-flex gap-2 justify-content-center mt-2">
                                <a href="/Admin/Hizmet/Edit/@h.Id" class="btn btn-warning btn-sm w-50">Düzenle</a>
                                <a href="/Admin/Hizmet/Delete/@h.Id" class="btn btn-danger btn-sm w-50">Sil</a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
</div>